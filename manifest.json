{
    "name": "Graffiti",
    "description": "Share your two cents on any webpage",
    "version": "0.2",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "icons": {
        "128": "icons/orange.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}